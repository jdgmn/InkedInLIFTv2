<%- include('layout', { body: `
  <h2>Memberships</h2>
  <table class="table table-striped mt-3">
    <thead>
      <tr>
        <th>Member</th>
        <th>Plan</th>
        <th>Price</th>
        <th>End Date</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      ${memberships.map(m => `
        <tr>
          <td>${m.user?.firstName || ''} ${m.user?.lastName || ''}</td>
          <td>${m.membershipType}</td>
          <td>${m.price}</td>
          <td>${m.endDate ? new Date(m.endDate).toLocaleDateString() : ''}</td>
          <td>${m.status}</td>
        </tr>
      `).join('')}
    </tbody>
  </table>
`}) %>
