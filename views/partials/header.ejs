<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title><%= title || "InkedInLIFT" %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background:#f8f9fa; }
    .site-container { max-width:1100px; margin-top:20px; }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/dashboard">InkedInLIFT</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navCollapse" aria-controls="navCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navCollapse">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link" href="/dashboard">Dashboard</a></li>
          <li class="nav-item" id="usersNav" style="display: none;"><a class="nav-link" href="/users">Users</a></li>
          <li class="nav-item" id="membershipsNav" style="display: none;"><a class="nav-link" href="/memberships">Memberships</a></li>
          <li class="nav-item" id="checkinsNav" style="display: none;"><a class="nav-link" href="/checkins">Check-ins</a></li>
          <li class="nav-item" id="selfcheckinNav" style="display: none;"><a class="nav-link" href="/selfcheckin">Self Check-In</a></li>
          <li class="nav-item" id="analyticsNav" style="display: none;"><a class="nav-link" href="/dashboard">Analytics</a></li>
        </ul>
        <div class="d-flex">
          <button id="logoutBtn" class="btn btn-outline-light btn-sm">Logout</button>
        </div>
      </div>
    </div>
  </nav>

  <script>
    // Role-based navigation visibility
    (async () => {
      function getToken(){ try { const t = localStorage.getItem("token"); if (t) return t; } catch(e){} const m=document.cookie.match(/(?:^|; )token=([^;]+)/); return m?m[1]:null;}
      const token = getToken();
      if (!token) return;

      try {
        const res = await fetch("/api/users/me", { headers: { Authorization: "Bearer " + token } });
        if (res.ok) {
          const user = await res.json();
          const role = user.role;

          // Show/hide navigation items based on role
          if (role === "admin") {
            // Admin sees everything
            document.getElementById("usersNav").style.display = "block";
            document.getElementById("membershipsNav").style.display = "block";
            document.getElementById("checkinsNav").style.display = "block";
            document.getElementById("selfcheckinNav").style.display = "block";
            document.getElementById("analyticsNav").style.display = "block";
          } else if (role === "receptionist") {
            // Receptionist sees memberships, checkins, self checkin
            document.getElementById("membershipsNav").style.display = "block";
            document.getElementById("checkinsNav").style.display = "block";
            document.getElementById("selfcheckinNav").style.display = "block";
          } else if (role === "client") {
            // Client only sees self checkin
            document.getElementById("selfcheckinNav").style.display = "block";
          }
        }
      } catch (e) {
        console.error("Failed to get user role:", e);
      }
    })();
  </script>

  <main class="site-container container">