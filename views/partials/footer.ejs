  <script>
    // global logout
    (function () {
      const btn = document.getElementById('logoutBtn');
      if (!btn) return;
      btn.addEventListener('click', () => {
        try { localStorage.removeItem('token'); } catch (e) {}
        document.cookie = 'token=; path=/; max-age=0';
        window.location.href = '/';
      });
    })();
  </script>
